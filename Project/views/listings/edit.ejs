<%layout('/layouts/boilerplate')%>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Edit your Listing</h3>
        <form method="post" novalidate class="needs-validation" enctype="multipart/form-data" action="/listings/<%= listing._id %>?_method=PUT">
            <div class="mb-3">
                <label class="form-label"  for="title">Title</label>
                <input class="form-control" required type="text" placeholder="Enter title" name="listing[title]" value="<%= listing.title %>">
                <div class="invalid-feedback">Enter valid title</div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" required placeholder="Enter description" name="listing[description]"><%= listing.description %></textarea>
                <div class="invalid-feedback">Enter valid description</div>
            </div>

            <div class="mb-3">
                Original Listing Image <br>
                <img src="<%=  listing.image.url %>" alt="listing image" height="180px" width="250px">
            </div>
    
            <div class="mb-3">
                <label class="form-label" for="image">Upload New Image</label>
                <input class="form-control" type="file" name="listing[image]">
            </div>
            
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label class="form-label" for="price">Price</label>
                    <input class="form-control" required placeholder="Enter Price " name="listing[price]" value=<%= listing.price %>>
                    <div class="invalid-feedback">Enter valid price</div>
                </div>
        
                <div class="mb-3 col-md-8">
                    <label class="form-label" for="country">Country</label>
                    <input class="form-control" type="text" required placeholder="Enter country" name="listing[country]" value=<%= listing.country %>>
                    <div class="invalid-feedback">Enter valid country name</div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" required placeholder="Enter location" name="listing[location]" value=<%= listing.location %>>
                <div class="invalid-feedback">Enter valid location</div>
            </div>
    
            <button class="btn btn-dark edit-btn mb-3 mt-3">Edit</button>
    </div>
</div>
    